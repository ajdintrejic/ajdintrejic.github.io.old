main {
  font-family: monospace, monospace;
  max-width: 48rem;
  padding: 2rem;
  margin: auto;
}

@media only screen and (max-device-width: 736px) {
  main {
    padding: 1rem;
  }
}

::selection {
  background: #d3869b;
}

body {
  background: #000000;
  color:      #ebdbb2;
}

pre {
  background-color: #3c3836 !important;
  color: #ebdbb2 !important;
  padding: 1em;
  border: 0;
}

a, a:active, a:visited {
  color: #b16286;
}

h1, h2, h3, h4, h5 {
  margin-bottom: .1rem;
}

blockquote {
  border-left: 1px solid #bdae93;
  margin: 0.5em 10px;
  padding: 0.5em 10px;
}

.highlight, pre {
  overflow-x: auto;
}

footer {
  align: center;
}

img {
    width: 100%;
}

.nav-item{
    margin-right: 5px;
}

.nav-bar {
    margin-top: 10px;
}
